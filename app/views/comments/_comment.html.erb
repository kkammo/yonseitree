<div class="field">
    <%= User.find(comment.user_id).user_name %><br />
    <%= comment.body %><br />
</div>

<% if (DirectoryClass.find(DirectoryHomework.find(Project.find(comment.project_id).directory_homework_id).directory_class_id).user_id == current_user.id) || comment.user == current_user %>

  <%= link_to 'Destroy Comment', [comment.project, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>

<% end %>