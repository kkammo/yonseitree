<tr>
	<td>
		<div class="col-md-2">
		    <strong> <font color = "green"> <%= User.find(comment.user_id).user_name %>	</font> </strong>
		</div>
		<div class="col-md-7">
		    <%= comment.body %>
		</div>
		<div class="col-md-2 timestamp">
			<h6>
			<%= comment.created_at.strftime("%H:%M / %d %b. %Y") %>
			</h6>
		</div>

		<!-- 댓글은 쓴 유저와 해당 과목 담당 TA에게만 삭제버튼을 활성화 한다. -->
		<div class="col-md-1">
		    <% if (DirectoryClass.find(DirectoryHomework.find(Project.find(comment.project_id).directory_homework_id).directory_class_id).user_id == current_user.id) || comment.user == current_user %>
			  <%= link_to '삭제', [comment.project, comment],
			               method: :delete,
			               data: { confirm: 'Are you sure?' } %>
			<% end %>
		</div>
	</td>
</tr>